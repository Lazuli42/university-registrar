<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Registrar's Office</title>
    </head>
    <body>
        <div class="container">
            <h1>Hogwart's School of Witchcraft and Wizardry</h1>
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Current Courses:</h2>
                        <form action="/create_course" method="post">
                            <div class="form-group">
                                <label for="name">New Course Name:</label>
                                <input type="text" name="name" class="form-control">
                                <label for="number">New Course Number:</label>
                                <input type="text" name="number" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Create New Course</button>
                        </form>
                        {% for course in courses %}
                            <li>{{course.getNumber}}: {{course.getName}}</li>
                        {% endfor %}
                    </div>
                    <div class="col-sm-6">
                        <h2>Current Students:</h2>
                        <form action="/create_student" method="post">
                            <div class="form-group">
                                <label for="name">New Student Name:</label>
                                <input type="text" name="name" class="form-control">
                                <label for="enrollment_date">Enrollment:</label>
                                <input type="date" name="enrollment_date" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-success">Create New Student</button>
                        </form>
                        {% for student in students %}
                            <li>{{student.getName}}: enrolled on {{student.getEnrollment}}</li>
                        {% endfor %}
                    </div>
                </div>

        </div>

    </body>
</html>
